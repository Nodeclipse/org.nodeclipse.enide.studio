<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            label="org.nodeclipse.enide.studio Sample Action Set"
            visible="true"
            id="org.nodeclipse.enide.studio.core.actionSet">
         <menu
               label="org.nodeclipse.enide.studio Sample &amp;Menu"
               id="sampleMenu">
            <separator
                  name="sampleGroup">
            </separator>
         </menu>
         <action
               label="&amp;org.nodeclipse.enide.studio Sample Action"
               icon="icons/sample.gif"
               class="org.nodeclipse.enide.studio.core.SampleAction"
               tooltip="Hello, Mavenized Eclipse. org.nodeclipse.enide.studio is built with Tycho"
               menubarPath="sampleMenu/sampleGroup"
               toolbarPath="sampleGroup"
               id="org.nodeclipse.enide.studio.core.SampleAction">
         </action>
      </actionSet>
   </extension>

   <!-- file associations -->
   <extension
         point="org.eclipse.ui.editors">
      <editor
            id="org.nodeclipse.editor.ScrapbookEditor"
            name="Scrapbook Editor (JDT)"
            class="org.eclipse.jdt.internal.debug.ui.snippeteditor.JavaSnippetEditor"
            default="true"
            extensions="p2f,jade">
      </editor>
      <editor
            id="org.nodeclipse.editor.AptanaHTMLEditor"
            name="HTML Editor (Aptanta)"
            class="com.aptana.editor.html.HTMLEditor"
            default="true"
            extensions="ejs">
      </editor>
   </extension>

</plugin>
